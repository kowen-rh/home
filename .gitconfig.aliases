[alias]
  aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g'

  a = add
  br = branch
  co = checkout
  cb = checkout -b
  ci = commit
  cm = commit --message
  ca = commit --all --message
  cl = clone
  df = diff
  dfc = diff --cached
  dt = difftool
  l = log
  mt = mergetool
  r = remote
  s = status --short
  st = status

  review = "!git log @{push}.."
  rv = review

  unstage = reset HEAD --
  un = unstage
  uncommit = reset --soft HEAD~1
  uc = uncommit
  untrack = rm --cache --
  ut = untrack

  update = !git pull --rebase upstream master
  up = update

  meld = !git mergetool --tool meld
